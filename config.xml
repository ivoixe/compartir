<?xml version='1.0' encoding='utf-8'?>
<widget id="com.prisma.share" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Proyecto compartir</name>
    <description>
       PROYECTO DE PRUEBAS PARA EL PLUGIN DE COMPARTIR
    </description>
	<icon src="icon.png"/>
    <author email="ivonne@prismacm.com" href="http://prismacm.com">
        Prisma Cm
    </author>
    <content src="index.html" />
    <access origin="*" />
	   <preference name="phonegap-version" value="3.7.0" />
	<!-- for iOS -->
	<feature name="SocialSharing">
		<param name="ios-package" value="SocialSharing" />
	</feature>
	<feature name="SocialSharing">
		<param name="android-package" value="nl.xservices.plugins.SocialSharing" />
	</feature>
	<config-file target="AndroidManifest.xml" parent="/manifest">
		<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	</config-file>
	<gap:plugin name="nl.x-services.plugins.socialsharing" version="3.5" />
</widget>
